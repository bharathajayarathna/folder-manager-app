<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.dep10.copyApp.controller.CopySceneController">
   <children>
      <AnchorPane prefHeight="122.0" prefWidth="474.0">
         <children>
            <VBox layoutX="10.0" layoutY="35.0" prefHeight="184.0" prefWidth="454.0" spacing="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0">
               <children>
                  <Label text="Select Folder / File">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <HBox spacing="10.0">
                     <children>
                        <TextField fx:id="txtSource" prefHeight="24.0" prefWidth="170.0" HBox.hgrow="ALWAYS">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </TextField>
                        <Button fx:id="btnSource" mnemonicParsing="false" onAction="#btnSourceOnAction" text="Browse" textFill="#362121">
                           <font>
                              <Font size="14.0" />
                           </font>
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </Button>
                     </children>
                  </HBox>
                  <Label text="Select Folder">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <HBox spacing="10.0">
                     <children>
                        <TextField fx:id="txtTarget" HBox.hgrow="ALWAYS">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </TextField>
                        <Button fx:id="btnTarget" mnemonicParsing="false" onAction="#btnTargetOnAction" text="Browse">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Button>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" spacing="10.0">
                     <children>
                        <Button fx:id="btnCopy" mnemonicParsing="false" onAction="#btnCopyOnAction" prefWidth="80.0" style="-fx-background-color: green;" text="COPY" textFill="#c3b2b2">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Button>
                        <Button fx:id="btnMove" mnemonicParsing="false" onAction="#btnMoveOnAction" prefWidth="80.0" style="-fx-background-color: green;" text="MOVE" textFill="#b99f9f">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Button>
                        <Button fx:id="btnDelete" mnemonicParsing="false" onAction="#btnDeleteOnAction" prefWidth="80.0" style="-fx-background-color: red;" text="DELETE" textFill="#a89797">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </AnchorPane>
   </children>
</HBox>
